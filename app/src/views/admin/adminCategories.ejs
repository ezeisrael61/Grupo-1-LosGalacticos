<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

      <body>
            <div class="container">
                  <%- include('../partials/header') %>


                        <main class="main-container-products">
                              <div class="container-main-nav">
                                    <%- include("partials/adminMain") %>
                              </div>
                              <div>
                                    <table class="table table-striped table-sm">
                                          <tbody>
                                                <% for( let i=0; i<products.length; i++) { %>
                                                      <tr>
                                                            <td><%- products[i].idProduct%></td>
                                                            <td><%- products[i].name%></td>
                                                            <td><%- products[i].subcategory.category.name%></td>
                                                            <td><%- products[i].subcategory.name%></td>
                                                            <td><%- products[i].price%></td>
                                                            <td><%- products[i].discount%></td>
                                                            <td style="display:flex">
                                                                  <!-- <a class="btn btn-confirm" href="/admin/products/edit/<%= products[i].idProduct %> ">
                                                            <i class="fa-solid fa-pen-to-square"></i>
                                                      </a> -->
                                                                  <a class="btn btn-confirm"
                                                                        href="/admin/products/edit/<%= category[i].idProduct %> ">
                                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                                  </a>
                                                                  <form action="/admin/products/delete/<%= products[i].idProduct %>?_method=DELETE"
                                                                        method="POST" style="display: inline-flex">
                                                                        <button type="submit" class="btn btn-submit">
                                                                              <i class="fa-solid fa-trash-can"></i>
                                                                        </button>
                                                                  </form>
                                                            </td>
                                                      </tr>
                                                      <% } %>
                                          </tbody>
                                    </table>
                              </div>
                        </main>
                        <%- include("../partials/footer") %>
                              <%- include("../partials/scripts") %>
            </div>
      </body>

</html>