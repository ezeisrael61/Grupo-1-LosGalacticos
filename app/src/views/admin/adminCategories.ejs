<!doctype html>
<html lang="es">
<%- include('../partials/head.ejs') %>

      <body>
            <main class="container-fluid">
                  <%- include("../partials/header") %>

                        <br>
                        <section class="row">
                              <article class="col-12">
                                    <a href="/admin/categorias/agregarcategoria"><button type="button" class="btn btn-success">Agregar</button></a>
                              </article>
                              <article class="col-12">
                                    <table class="table">
                                          <thead>
                                                <tr>
                                                      <th scope="col">Id</th>
                                                      <th scope="col">Nombre</th>
                                                      <th scope="col">Ver</th>
                                                      <th scope="col">Editar</th>
                                                      <th scope="col">Borrar</th>
                                                </tr>
                                          </thead>
                                          <tbody>
                                                <% categorias.forEach(categoria=> { %>
                                                      <tr>
                                                            <td>
                                                                  <%= categoria.idCategoria%>
                                                            </td>
                                                            <td>
                                                                  <%= categoria.name%>
                                                            </td>
                                                            <td><a href="/categoriaes/<%= categoria.idCategoria%> "> <ion-icon
                                                                              name="eye-outline"></ion-icon></a>
                                                            </td>
                                                            <td><a href="/admin/categoriaes/editarcategoria/<%= categoria.idCategoria%> "> <ion-icon
                                                                              name="pencil-outline"></ion-icon></a></td>
                                                            <form action="/admin/categoriaes/eliminarcategoria/<%= categoria.idCategoria %>?_method=DELETE"
                                                                  method="POST">
                                                                  <td><button type="submit" style="border: none; background: none;"><ion-icon
                                                                                    name="trash-outline"></ion-icon></td>
                                                            </form>
                                                      </tr>
                                                      <% }); %>
                                          </tbody>
                                    </table>
                              </article>
                        </section>
            </main>
            <%- include("../partials/footer") %>

                  <%- include("../partials/scripts") %>
                        <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
                        <script src="/js/categories.js"></script>
      </body>

</html>