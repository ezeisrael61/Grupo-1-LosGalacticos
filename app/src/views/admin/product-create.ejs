<!DOCTYPE html>
<html lang="sp">
<%- include("../partials/head") %>

      <body>
            <div class="container">
                  <%- include("../partials/header") %>
                        <main>
                              <div class="form-container">
                                    <h2>Agregar Producto</h2>
                                    <p>Ingresá los datos</p>
                                    <form action="/admin/products/create" method="POST" enctype="multipart/form-data">
                                          <div class="form">
                                                <div class="input-container">
                                                      <label for="name" class="form-label">Nombre:</label>
                                                      <input class="input-style" type="text" name="name" placeholder="Ej: Pico & Pala"
                                                            value="<%= locals.old && locals.old.name ? locals.old.name : null %>">
                                                      <span class="error-message">
                                                            <%= locals.errors && locals.errors.name ? locals.errors.name.msg : null %>
                                                      </span>
                                                </div>
                                                <div class="input-container">
                                                      <label for="price" class="form-label">Precio:</label>
                                                      <input class="input-style" type="number" name="price" placeholder="Ej: 2500" step="0.1"
                                                            value="<%= locals.old && locals.old.price ? locals.old.price : null %>">
                                                      <span class="error-message">
                                                            <%= locals.errors && locals.errors.price ? locals.errors.price.msg : null %>
                                                      </span>
                                                </div>
                                                <div class="input-container">
                                                      <label for="discount" class="form-label">Descuento:</label>
                                                      <input class="input-style" type="number" name="discount" placeholder="Ej: 10"
                                                            value="<%= locals.old && locals.old.discount ? locals.old.discount : null %>">
                                                      <span class="error-message">
                                                            <%= locals.errors && locals.errors.discount ? locals.errors.discount.msg : null %>
                                                      </span>
                                                </div>
                                                <div class="input-container">
                                                      <label for="description" class="form-label">Descipción:</label>
                                                      <textarea name="description" id="description" class="textarea-style"
                                                            placeholder="Ingrese la descripción"><%= locals.old && locals.old.description ? locals.old.description : null %></textarea>
                                                      <span class="error-message">
                                                            <%= locals.errors && locals.errors.description ? locals.errors.description.msg : null %>
                                                      </span>
                                                </div>
                                                <div class="input-container">
                                                      <label for="category" class="form-label">Categoría:</label>
                                                      <select name="category" id="category" class="select-style">
                                                            <% for(let i=0; i<category.length;i++) {%>

                                                                  <option value="<%= category[i].idCategory %>">
                                                                        <%= category[i].name %>
                                                                  </option>
                                                                  <% } %>
                                                      </select>
                                                      <span class="error-message">
                                                            <%= locals.errors && locals.errors.category ? locals.errors.category.msg : null %>
                                                      </span>
                                                </div>
                                                <div class="input-container">
                                                      <label for="subcategory" class="form-label">SubCategoria:</label>
                                                      <select name="subcategory" id="subcategory" class="select-style">
                                                            <% for(let i=0; i<subcategory.length;i++) {%>
                                                                  <option value="<%= subcategory[i].idSubCategory %>">
                                                                        <%= subcategory[i].name %>
                                                                  </option>
                                                                  <% } %>
                                                      </select>
                                                      <span class="error-message">
                                                            <%= locals.errors && locals.errors.subcategory ? locals.errors.subcategory.msg : null %>
                                                      </span>
                                                </div>

                                                <div class="input-container">
                                                      <label for="sold" class="form-label">Ventas:</label>
                                                      <input class="input-style" type="number" name="sold" placeholder="Ej: 0"
                                                            value="<%= locals.old && locals.old.sold ? locals.old.sold : 0 %>">
                                                      <span class="error-message">
                                                            <%= locals.errors && locals.errors.sold ? locals.errors.sold.msg : null %>
                                                      </span>
                                                </div>
                                                <div class="input-container">
                                                      <label for="stock" class="form-label">Stock:</label>
                                                      <input class="input-style" type="number" name="stock" placeholder="Ej: 150"
                                                            value="<%= locals.old && locals.old.stock ? locals.old.stock : null %>">
                                                      <span class="error-message">
                                                            <%= locals.errors && locals.errors.stock ? locals.errors.stock.msg : null %>
                                                      </span>
                                                </div>
                                                <div class="input-container">
                                                      <label for="img" class="form-label">Imagen:</label>
                                                      <div class="input-file-container">
                                                            <p>Agregar Imagen</p>
                                                            <input class="input-file" type="file" id="image" name="image">
                                                      </div>
                                                      <span class="error-message">
                                                            <%= locals.errors && locals.errors.img ? locals.errors.img.msg : null %>
                                                      </span>
                                                </div>
                                                <div class="button-container">
                                                      <button type="submit" class="btn btn-submit">Agregar</button>
                                                </div>
                                          </div>
                                    </form>

                              </div>
                        </main>

                        <%- include("../partials/footer") %>

                              <%- include("../partials/scripts") %>
            </div>
      </body>

</html>