<!-- Recibo desde el home.ejs  un string title y un array product, 
el cual itero con un forEach y cargo cada campo donde corresponde  -->

<section class="vip-products">
      <div class="container-title">
            <h3 class="title">
                  <%- title %>
            </h3>
      </div>
      <% for( let i=0; i < products.length; i++ ) { %>

            <article class="product">
                  <div class="product-container">
                        <a class="photo-container" href="/productos/descripcion/<%- products[i].idProduct  %> ">

                              <img class="photo" src="/img/<%- products[i].subcategory.category.name %>/<%- products[i].images[0].name %>" alt="">
                        </a>


                        <div class="valoracion">
                              <% if (products[i].sold>5 & products[i].sold<=10) { %>
                                          <i class="fa-sharp fa-solid fa-star"></i>
                                          <% } else if (products[i].sold>10 & products[i].sold<=20) { %>
                                                      <i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i>
                                                      <% } else if (products[i].sold>20 & products[i].sold<=30) { %>
                                                                  <i class="fa-sharp fa-solid fa-star"></i><i class="fa-sharp fa-solid fa-star"></i><i
                                                                        class="fa-sharp fa-solid fa-star"></i>
                                                                  <% } else if (products[i].sold>30 & products[i].sold<=40) { %>
                                                                              <i class="fa-sharp fa-solid fa-star"></i><i
                                                                                    class="fa-sharp fa-solid fa-star"></i><i
                                                                                    class="fa-sharp fa-solid fa-star"></i><i
                                                                                    class="fa-sharp fa-solid fa-star"></i>
                                                                              <% } else if (products[i].sold>40 &
                                                                                    products[i].sold
                                                                                    >50){ %>
                                                                                    <i class="fa-sharp fa-solid fa-star"></i><i
                                                                                          class="fa-sharp fa-solid fa-star"></i><i
                                                                                          class="fa-sharp fa-solid fa-star"></i><i
                                                                                          class="fa-sharp fa-solid fa-star"></i><i
                                                                                          class="fa-sharp fa-solid fa-star"></i>
                                                                                    <% } %>
                        </div>

                        <% if (products[i].discount>0) { %>
                              <div class="descuento">
                                    <p><%- products[i].discount %>%</p>
                              </div>
                              <% } %>

                  </div>
                  <h2 class="name"><%- products[i].name %></h2>
                  <p class="price">$ <%- products[i].price %></p>
                  <p class="send">Envio Gratis</p>
            </article>






            <% } %>








</section>